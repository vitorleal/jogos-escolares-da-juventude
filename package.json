{
  "name": "jogos-escolares-da-juventude",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "prebuild-win": "npm run concat",
    "build-win": "electron-packager . \"Jogos Escolares da Juventude\" --platform=win32 --arch=ia32 --version=0.31.0",
    "prebuild-mac": "npm run concat",
    "build-mac": "electron-packager . \"Jogos Escolares da Juventude\" --platform=darwin --arch=x64 --version=0.31.0",
    "concat": "./node_modules/jscat/bin/jscat ./assets/js/*.js > ./assets/js/all.js",
    "clean": "rm -rf Jogos* && rm assets/js/all.js"
  },
  "devDependencies": {
    "jscat": "0.0.2"
  }
}
